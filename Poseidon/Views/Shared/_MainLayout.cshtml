<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Poseidon - @ViewBag.Title</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/themes/base/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div id="banner">
        <img id="logo" src="@Url.Content("~/Images/starfish.png")" alt="starfish" />
        <h1 id="poseidon_header">@Html.ActionLink("Poseidon", "Index", "Home")</h1>
        <img id="logo2" src="@Url.Content("~/Images/zsl_ucl_logo_horiz.png")" alt="zsl_ucl_logo" />
        <nav id="menu">
            <ul>
                <li id="username">@User.Identity.Name:</li>
                <li class="tab" id="home_tab">@Html.ActionLink("Home", "Index", "Home")</li>
                <li class="tab" id="images_tab">@Html.ActionLink("Images", "Collection", "Image")</li>
                <li class="tab" id="label_tab">@Html.ActionLink("Label", "Index", "Label")</li>
                <li class="tab" id="data_tab">@Html.ActionLink("Data", "Index", "Data")</li>
                <li class="tab" id="tags_tab">@Html.ActionLink("Tags", "Index", "Tags")</li>
                <li class="tab" id="tags_tab">@Html.ActionLink("About", "Index", "About")</li>
                <li class="tab">
                    @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logout_form" }))
                    {@Html.AntiForgeryToken()<a href="javascript:document.getElementById('logout_form').submit()">Log off</a>}
                </li>
            </ul>
        </nav>
    </div>

    <div id="hrule"></div>

    <div id="content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @RenderSection("scripts", required: false)
</body>
</html>